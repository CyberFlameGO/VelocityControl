<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.mineacademy</groupId>
	<artifactId>ProxyControl-Red</artifactId>
	<version>3.9.2</version>
    <modules>
        <module>bungeecontrol-red</module>
		<module>velocitycontrol-red</module>
	</modules>
    <packaging>pom</packaging>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<plugin.name>proxycontrol</plugin.name>
		<velocity.name>velocitycontrol</velocity.name>
		<bungee.name>bungeecontrol</bungee.name>
		<bungee.class>${project.groupId}.${bungee.name}.BungeeControl</bungee.class>
		<velocity.class>${project.groupId}.${velocity.name}.VelocityControl</velocity.class>
	</properties>

	<repositories>
<!--		<repository>-->
<!--			<id>mineacademy-repo</id>-->
<!--			<url>https://bitbucket.org/kangarko/libraries/raw/master</url>-->
<!--		</repository>-->
	</repositories>

	<dependencies>
		<dependency>
			<groupId>org.mineacademy</groupId>
			<artifactId>BungeeFoundation</artifactId>
			<version>LATEST</version>
			<scope>compile</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>3.2.0</version>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.8.1</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>3.2.4</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<createDependencyReducedPom>false</createDependencyReducedPom>
					<artifactSet>
						<includes>
							<include>org.mineacademy:BungeeFoundation*</include>
						</includes>
					</artifactSet>
				</configuration>
			</plugin>
		</plugins>
		<resources>
			<resource>
				<directory>bungeecontrol-red/src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
			<resource>
				<directory>velocitycontrol-red/src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
	</build>
</project>